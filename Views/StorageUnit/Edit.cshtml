@model FacilityManagement.Models.StorageUnit
@{
    ViewData["Title"] = "Edit Storage Unit";
}

<h2>Edit Storage Unit</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="IsOccupied" />
                    <input type="hidden" asp-for="OccupiedAt" />
                    <input type="hidden" asp-for="OccupantId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UnitNumber" class="form-label"></label>
                                <input asp-for="UnitNumber" class="form-control" />
                                <span asp-validation-for="UnitNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FacilityId" class="form-label">Facility</label>
                                <select asp-for="FacilityId" class="form-select">
                                    @foreach (var facility in ViewBag.Facilities as
                                                                        List<FacilityManagement.Models.Facility>)
                                    {
                                        <option value="@facility.Id" selected="@(facility.Id == Model.FacilityId)">
                                            @facility.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="FacilityId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="SizeSquareMeters" class="form-label">Size (Square Meters)</label>
                                <input asp-for="SizeSquareMeters" class="form-control" type="number" step="0.1" />
                                <span asp-validation-for="SizeSquareMeters" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MonthlyPrice" class="form-label">Monthly Price ($)</label>
                                <input asp-for="MonthlyPrice" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="MonthlyPrice" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Update Storage Unit</button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        <a asp-action="Index" asp-route-facilityId="@Model.FacilityId" class="btn btn-outline-info">Back
                            to Units</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6>Current Information</h6>
            </div>
            <div class="card-body">
                <p><strong>Unit:</strong> @Model.UnitNumber</p>
                <p><strong>Facility:</strong> @Model.Facility?.Name</p>
                <p><strong>Status:</strong>
                    @if (Model.IsOccupied)
                    {
                        <span class="badge bg-warning text-dark">Occupied</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </p>
                @if (Model.IsOccupied && Model.Occupant != null)
                {
                    <p><strong>Occupant:</strong> @Model.Occupant.FullName</p>
                    <p><strong>Since:</strong> @Model.OccupiedAt?.ToString("MMM dd, yyyy")</p>
                }
                <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
            </div>
        </div>

        @if (Model.IsOccupied)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6>Occupancy Actions</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <small>This unit is currently occupied. You can edit the unit details, but occupancy status is
                            managed separately.</small>
                    </div>
                    <form asp-action="Vacate" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-outline-success btn-sm"
                            onclick="return confirm('Are you sure you want to vacate this unit?')">
                            Vacate Unit
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
