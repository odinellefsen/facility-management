@model IEnumerable<FacilityManagement.Models.StorageUnit>
@{
    ViewData["Title"] = "Storage Units";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Storage Units</h2>
        @if (ViewBag.FacilityName != null)
        {
            <p class="text-muted">Facility: <strong>@ViewBag.FacilityName</strong></p>
        }
    </div>
    <div>
        @if (User.Identity!.IsAuthenticated)
        {
            @if (ViewBag.FacilityId != null)
            {
                <a asp-action="Create" asp-route-facilityId="@ViewBag.FacilityId" class="btn btn-success">Add Storage Unit</a>
                <a asp-controller="Facility" asp-action="Details" asp-route-id="@ViewBag.FacilityId"
                    class="btn btn-outline-info">Back to Facility</a>
            }
            else
            {
                <a asp-action="Create" class="btn btn-success">Add Storage Unit</a>
            }
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success">Login to Add Storage Unit</a>
            @if (ViewBag.FacilityId != null)
            {
                <a asp-controller="Facility" asp-action="Details" asp-route-id="@ViewBag.FacilityId"
                    class="btn btn-outline-info">Back to Facility</a>
            }
        }
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Unit Number</th>
                            <th>Facility</th>
                            <th>Size (mÂ²)</th>
                            <th>Monthly Price</th>
                            <th>Status</th>
                            <th>Occupant</th>
                            <th>Occupied Since</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var unit in Model)
                        {
                            <tr class="@(unit.IsOccupied ? "table-warning" : "table-success")">
                                <td>
                                    <strong>@unit.UnitNumber</strong>
                                    @if (!string.IsNullOrEmpty(unit.Description))
                                    {
                                        <br>

                                        <small class="text-muted">@unit.Description</small>
                                    }
                                </td>
                                <td>
                                    <a asp-controller="Facility" asp-action="Details" asp-route-id="@unit.FacilityId">
                                        @unit.Facility.Name
                                    </a>
                                </td>
                                <td>@unit.SizeSquareMeters</td>
                                <td>$@unit.MonthlyPrice</td>
                                <td>
                                    @if (unit.IsOccupied)
                                    {
                                        <span class="badge bg-warning text-dark">Occupied</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                </td>
                                <td>
                                    @if (unit.Occupant != null)
                                    {
                                        <span>@unit.Occupant.FullName</span>
                                        <br>

                                        <small class="text-muted">@unit.Occupant.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (unit.OccupiedAt.HasValue)
                                    {
                                        <span>@unit.OccupiedAt.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@unit.Id"
                                            class="btn btn-sm btn-outline-info">Details</a>
                                        @if (User.Identity!.IsAuthenticated)
                                        {
                                            <a asp-action="Edit" asp-route-id="@unit.Id"
                                                class="btn btn-sm btn-outline-warning">Edit</a>
                                            @if (unit.IsOccupied)
                                            {
                                                <form asp-action="Vacate" asp-route-id="@unit.Id" method="post"
                                                    style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-outline-success"
                                                        onclick="return confirm('Vacate this unit?')">Vacate</button>
                                                </form>
                                            }
                                            <a asp-action="Delete" asp-route-id="@unit.Id"
                                                class="btn btn-sm btn-outline-danger">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <p class="text-muted">No storage units found.</p>
                @if (User.Identity!.IsAuthenticated)
                {
                    @if (ViewBag.FacilityId != null)
                    {
                        <a asp-action="Create" asp-route-facilityId="@ViewBag.FacilityId" class="btn btn-success">Add First Storage Unit</a>
                    }
                    else
                    {
                        <a asp-action="Create" class="btn btn-success">Add First Storage Unit</a>
                    }
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success">Login to Add Storage Units</a>
                }
            </div>
        }
    </div>
</div>

@if (ViewBag.FacilityId == null)
{
    <div class="mt-4">
        <a asp-controller="Facility" asp-action="Index" class="btn btn-secondary">Back to Facilities</a>
    </div>
}
